<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loading">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@mipmap/back_button"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#00000000"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textviewnick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginEnd="39dp"
                                android:layout_marginRight="39dp"
                                android:layout_toLeftOf="@+id/buttonnickdegistir"
                                android:layout_toStartOf="@+id/buttonnickdegistir"
                                android:text="Nick"
                                android:textAppearance="?android:attr/textAppearanceLarge" />

                            <Button
                                android:id="@+id/buttonnickdegistir"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginEnd="51dp"
                                android:layout_marginRight="51dp"
                                android:text="Button" />

                            <RelativeLayout
                                android:id="@+id/relativeLayout6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_below="@+id/buttonnickdegistir">

                                <TextView
                                    android:id="@+id/textviewuyumlulukorani"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBaseline="@+id/textView19"
                                    android:layout_alignBottom="@+id/textView19"
                                    android:layout_toLeftOf="@+id/textView6"
                                    android:layout_toStartOf="@+id/textView6"
                                    android:text="TextView" />

                                <TextView
                                    android:id="@+id/textView19"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textviewevetsayisi"
                                    android:layout_marginEnd="41dp"
                                    android:layout_marginRight="41dp"
                                    android:layout_marginTop="28dp"
                                    android:layout_toLeftOf="@+id/textviewuyumlulukorani"
                                    android:layout_toStartOf="@+id/textviewuyumlulukorani"
                                    android:text="Uyumluluk Oranı:" />

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignLeft="@+id/textView19"
                                    android:layout_alignStart="@+id/textView19"
                                    android:layout_below="@+id/textView4"
                                    android:text="Evet"
                                    android:textSize="17dp" />

                                <TextView
                                    android:id="@+id/textviewhayirsayisi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBaseline="@+id/textviewevetsayisi"
                                    android:layout_alignBottom="@+id/textviewevetsayisi"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginEnd="91dp"
                                    android:layout_marginRight="91dp"
                                    android:text="TextView" />

                                <TextView
                                    android:id="@+id/textviewevetsayisi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignLeft="@+id/textviewevetorani"
                                    android:layout_alignStart="@+id/textviewevetorani"
                                    android:layout_below="@+id/textviewevetorani"
                                    android:text="TextView" />

                                <TextView
                                    android:id="@+id/textviewhayirorani"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_above="@+id/textviewhayirsayisi"
                                    android:layout_alignLeft="@+id/textviewhayirsayisi"
                                    android:layout_alignStart="@+id/textviewhayirsayisi"
                                    android:text="TextView" />

                                <TextView
                                    android:id="@+id/textviewevetorani"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textView5"
                                    android:layout_marginEnd="21dp"
                                    android:layout_marginRight="21dp"
                                    android:layout_marginTop="11dp"
                                    android:layout_toLeftOf="@+id/textView4"
                                    android:layout_toStartOf="@+id/textView4"
                                    android:text="TextView" />

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_above="@+id/textviewevetorani"
                                    android:layout_toEndOf="@+id/textView4"
                                    android:layout_toRightOf="@+id/textView4"
                                    android:text="Hayır"
                                    android:textSize="17dp" />

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/buttonnickdegistir"
                                    android:layout_centerHorizontal="true"
                                    android:text="İstatistikler"
                                    android:textAppearance="?android:attr/textAppearanceLarge" />

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignEnd="@+id/textviewevetsayisi"
                                    android:layout_alignRight="@+id/textviewevetsayisi"
                                    android:layout_centerVertical="true"
                                    android:text="TextView" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/relativeLayout6"
                                android:layout_marginTop="50dp" >

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:text="Sorularına Ait İstatistikler"
                                    android:textAppearance="?android:attr/textAppearanceLarge" />

                                <ListView
                                    android:id="@+id/listviewyazdiginsorular1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/relativeLayout6"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:text="Sorularına Ait İstatistikler"
                                    android:textAppearance="?android:attr/textAppearanceLarge" />

                                <ListView
                                    android:id="@+id/listviewyazdiginsorular"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </RelativeLayout>

                        </RelativeLayout>
                    </ScrollView>

                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>