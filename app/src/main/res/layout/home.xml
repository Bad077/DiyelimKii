<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loading">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@mipmap/back_button"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:tabStripEnabled="false"
                >
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@mipmap/tab_background">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/relLaybuyukstatistik">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/NickDegisLayout"
                                    android:orientation="horizontal"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp">


                            <TextView
                                fontPath="fonts/BalooThambi-Regular.ttf"
                                android:id="@+id/textviewnick"
                                android:textColor="#f3911a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="asdasdasdasdasd"
                                android:maxLength="15"
                                android:textSize="30dp"
                               />
                                    <ImageButton
                                        android:id="@+id/buttonnickdegistir"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="#00000000"
                                        android:src="@mipmap/nick_edit"
                                        android:text="Button"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginLeft="20dp"
                                        />

                                </LinearLayout>
                            <RelativeLayout
                                android:id="@+id/relativeLayout6"
                                android:layout_width="320dp"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/istatatisti_background"
                                android:layout_below="@+id/NickDegisLayout"
                                android:layout_centerHorizontal="true">

                                <TextView
                                    fontPath="fonts/BalooThambi-Regular.ttf"
                                    android:id="@+id/textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="19dp"
                                    android:text="İstatistikler"
                                    android:textSize="30dp"
                                    android:textColor="#FFFFFF"/>

                                <LinearLayout
                                    android:layout_width="300dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/relLayIstatistik"
                                    android:orientation="vertical"
                                    android:layout_below="@+id/textView"
                                    android:layout_centerHorizontal="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:weightSum="1">

                                        <TextView
                                            fontPath="fonts/BalooThambi-Regular.ttf"
                                            android:id="@+id/textView3"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:text="EVET"
                                            android:textSize="30dp"
                                            android:textAlignment="center"
                                            android:layout_width="wrap_content"
                                            android:textColor="#FFFFFF"/>

                                        <TextView
                                            fontPath="fonts/BalooThambi-Regular.ttf"
                                            android:id="@+id/textView2"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:text="HAYIR"
                                            android:textSize="30dp"
                                            android:textAlignment="center"
                                            android:layout_width="wrap_content"
                                            android:textColor="#FFFFFF"/>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:weightSum="1"
                                        >
                                    <TextView
                                        fontPath="fonts/BalooThambi-Regular.ttf"
                                        android:id="@+id/textviewhayirorani"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="%34.4"
                                        android:textSize="30dp"
                                       android:layout_weight="0.5"
                                        android:textAlignment="center"
                                        android:textColor="#FFFFFF"
                                        />

                                    <TextView
                                        fontPath="fonts/BalooThambi-Regular.ttf"
                                        android:id="@+id/textviewevetorani"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="%34.4"
                                        android:textSize="30dp"
                                        android:layout_weight="0.5"
                                        android:textAlignment="center"
                                        android:textColor="#FFFFFF"
                                        />
                                </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/relLayEvetHayirSayisi"
                                        android:weightSum="1">
                                        <TextView
                                            fontPath="fonts/BalooThambi-Regular.ttf"
                                            android:id="@+id/textviewhayirsayisi"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="(23)"
                                            android:textSize="20dp"
                                            android:layout_weight="0.5"
                                            android:textAlignment="center"
                                            android:textColor="#FFFFFF"/>

                                        <TextView
                                            fontPath="fonts/BalooThambi-Regular.ttf"
                                            android:id="@+id/textviewevetsayisi"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:text="(34)"
                                            android:textAlignment="center"
                                            android:textSize="20dp"
                                            android:textColor="#FFFFFF"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/relLayIstatistik"
                                    android:layout_centerHorizontal="true">
                                    <TextView
                                        fontPath="fonts/BalooThambi-Regular.ttf"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Uyumluluk Oranı: "
                                        android:textColor="#FFFFFF"
                                        android:textSize="25dp"/>
                                <TextView
                                    fontPath="fonts/BalooThambi-Regular.ttf"
                                    android:id="@+id/textviewuyumlulukorani"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="%56.2"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:textSize="25dp"
                                    android:layout_marginBottom="5dp"
                                    android:textColor="#FFFFFF"/>
                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/relativeLayout6"
                                android:layout_centerHorizontal="true"
                                android:background="@mipmap/sorularina_ait_istatistik">



                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relLaybuyukstatistik"
                        android:id="@+id/relLaysorunuzyok"
                        android:background="@mipmap/sorunuz_yok"
                        android:layout_centerHorizontal="true">

                    </RelativeLayout>
                    <ListView
                        android:id="@+id/listviewyazdiginsorular"
                        android:layout_width="310dp"
                        android:layout_height="160dp"
                        android:layout_below="@+id/relLaybuyukstatistik"
                        android:layout_marginTop="0dp"
                        android:layout_centerHorizontal="true"
                        android:visibility="invisible"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/tab_background"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/relativeLayout3"
                        android:layout_width="342dp"
                        android:layout_height="134dp"
                        android:layout_below="@+id/textView7"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="17dp"
                        android:background="@mipmap/soru_balonu">

                        <EditText
                            android:id="@+id/editText"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="#00000000"
                            android:hint="Soru yazın.."
                            android:imeOptions="actionNext"
                            android:nextFocusForward="@+id/editText2"
                            android:inputType="text"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLayout4"
                        android:layout_width="342dp"
                        android:layout_height="134dp"
                        android:background="@mipmap/soru_balonu_turuncu"
                        android:layout_below="@+id/relativeLayout3"
                        android:layout_alignLeft="@+id/relativeLayout3"
                        android:layout_alignStart="@+id/relativeLayout3">

                        <EditText
                            android:id="@+id/editText2"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView11"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="#00000000"
                            android:hint="Soru yazın.."
                            android:imeOptions="actionDone"
                            android:inputType="textWebEditText"
                            android:maxWidth="200dp"
                            android:textColor="#FFFFFF" />

                    </RelativeLayout>

                    <ImageButton
                        android:id="@+id/gonder_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relativeLayout4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="33dp"
                        android:background="#00000000"
                        android:src="@mipmap/gonder"
                        android:text="Gönder" />

                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>