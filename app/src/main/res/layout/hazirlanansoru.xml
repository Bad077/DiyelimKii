<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/listview_background"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:orientation="vertical">

            <TextView
                fontPath="fonts/BalooThambi-Regular.ttf"
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="ID"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:textSize="13dp"
                android:id="@+id/textviewid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2349"
                android:textAlignment="center"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_weight="0.60"
            android:orientation="vertical">

            <TextView
                android:textSize="13dp"
                fontPath="fonts/BalooThambi-Regular.ttf"
                android:id="@+id/textviewwhatiff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="220dip"
                android:text="Diyelim ki Suyun üzerinde hiç durmadan koşabileceksin."
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:textSize="13dp"
                fontPath="fonts/BalooThambi-Regular.ttf"
                android:id="@+id/textviewresultt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="220dip"
                android:text="Ama suya bir daha asla ve asla sittin sene hiç batmayacaksın."
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical">

            <TextView
                android:textSize="13dp"
                android:id="@+id/textviewevett"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EVET: %25.2"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                />

            <TextView
                android:textSize="13dp"
                android:id="@+id/textviewhayirr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HAYIR: %74.8"
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:textSize="13dp"
                android:id="@+id/textviewtoplamm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOPLAM: 43"
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>