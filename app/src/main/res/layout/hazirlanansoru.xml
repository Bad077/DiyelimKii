<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/listview_background">

        <TextView
            android:id="@+id/textviewid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:text="TextView"
            android:layout_alignBaseline="@+id/textviewresultt"
            android:layout_alignBottom="@+id/textviewresultt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textviewwhatiff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_alignBaseline="@+id/textviewevett"
            android:layout_alignBottom="@+id/textviewevett"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textviewresultt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textviewwhatiff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textviewevett"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textviewhayirr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textviewtoplamm"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/textviewtoplamm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_alignTop="@+id/textviewresultt"
            android:layout_alignLeft="@+id/textviewhayirr"
            android:layout_alignStart="@+id/textviewhayirr"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="8dp" />
    </RelativeLayout>
</LinearLayout>