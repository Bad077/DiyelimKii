<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="150dp"
    android:minHeight="150dp"
    android:minWidth="250dp"
    android:background="@mipmap/yeninick_backg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:background="@mipmap/nick_degistir_edittext_backg">
        <EditText
            fontPath="fonts/BalooThambi-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_centerHorizontal="true"
            android:maxLength="15"
            android:ems="10"

             />
        <TextView
            fontPath="fonts/BalooThambi-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_alignParentRight="true"
            android:text="15"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:textColor="#878787"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/nick_degis_iptal"
            android:background="#00000000"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@mipmap/nick_degis_tamam"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</LinearLayout>