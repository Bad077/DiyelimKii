<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="150dp"
    android:minHeight="150dp"
    android:minWidth="250dp"
    android:background="@mipmap/yeninick_backg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:background="@mipmap/nick_degistir_edittext_backg">

        <EditText
            android:id="@+id/edittextnicko"
            fontPath="fonts/BalooThambi-Regular.ttf"
            android:layout_width="180dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:maxLength="15"
            android:textColor="#878787"
            android:background="@android:color/transparent"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/textviewkackaldii"
            fontPath="fonts/BalooThambi-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="15"
            android:textColor="#878787"
            android:textSize="20dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <ImageButton
            android:id="@+id/butoniptalleregeldik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@mipmap/nick_degis_iptal" />

        <ImageButton
            android:id="@+id/butononayikoy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:src="@mipmap/nick_degis_tamam" />
    </LinearLayout>
</LinearLayout>